<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/region_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Select Region"
        android:drawableLeft="@drawable/ic_language_black_48dp"
        android:textSize="24sp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/favourite_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/region_button"
        android:padding="16dp"
        android:text="(Favourite)"
        android:drawableLeft="@drawable/ic_favorite_black_48dp"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:hapticFeedbackEnabled="true"
        />

    <Button
        android:id="@+id/last_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/favourite_button"
        android:padding="16dp"
        android:text="(Last Picked)"
        android:drawableLeft="@drawable/ic_fast_rewind_black_48dp"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:hapticFeedbackEnabled="true"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
